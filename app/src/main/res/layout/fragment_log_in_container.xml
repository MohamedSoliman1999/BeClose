<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Forms.LogInContainerFragment">
<ImageView
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:background="@drawable/ic_launcher_background"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintVertical_bias="0"
    app:layout_constraintBottom_toBottomOf="parent"
    android:scaleType="centerCrop"
    android:src="@drawable/gradiant_color_background"
    app:layout_constraintHeight_percent="0.27"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/containerItem_LoginContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/bottomsheet_background"
        app:layout_constraintHeight_percent="0.78"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="1">
        <com.google.android.material.tabs.TabLayout
            android:id="@+id/form_tab_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0" />
        <androidx.viewpager.widget.ViewPager
            android:id="@+id/form_view_pager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent="0.78"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/form_tab_layout"
            app:layout_constraintVertical_bias="0"/>
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/google_fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_google"
            android:backgroundTint="#fff"
            android:elevation="35dp"
            app:borderWidth="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/form_view_pager"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/facbook_fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_facebook"
            android:backgroundTint="#fff"
            android:elevation="35dp"
            app:layout_constraintHorizontal_bias="0"
            android:layout_margin="15dp"
            app:borderWidth="0dp"
            app:layout_constraintStart_toEndOf="@id/google_fab"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/form_view_pager"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/twitter_fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:borderWidth="0dp"
            android:src="@drawable/ic_twitter"
            android:backgroundTint="#fff"
            android:elevation="35dp"
            app:layout_constraintHorizontal_bias="1"
            android:layout_margin="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/google_fab"
            app:layout_constraintTop_toBottomOf="@id/form_view_pager"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>