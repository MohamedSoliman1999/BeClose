<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/BlueGradientEnd"
    tools:context=".Distenation.WalkThroughFragment">
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/walk_through_view_pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.78"
        android:background="@drawable/walk_through_view_pager"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="10dp"
        app:layout_constraintVertical_bias="0"/>
    <View
        android:id="@+id/button_next_view"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:background="@drawable/outer_icon_background"
        app:layout_constraintStart_toStartOf="@id/next_btn"
        app:layout_constraintTop_toTopOf="@id/next_btn"
        app:layout_constraintEnd_toEndOf="@id/next_btn"
        app:layout_constraintBottom_toBottomOf="@id/next_btn">
    </View>
    <ImageView
        android:id="@+id/next_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintVertical_bias="0.805"
        android:src="@drawable/ic_next"
        android:padding="15dp"
        android:background="@drawable/ovel_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/getStart_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintVertical_bias="0.95"
        android:backgroundTint="@color/red"
        android:layout_marginStart="12dp"
        android:enabled="true"
        android:fontFamily="@font/segoeui_font"
        android:text="Get Start"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        app:icon="@drawable/ic_nextarrow"
        app:iconSize="25dp"
        app:iconGravity="end"
        app:iconPadding="40dp"
        android:paddingStart="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        app:iconTint="@color/white"
        app:cornerRadius="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <LinearLayout
        android:id="@+id/indecatorContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:orientation="horizontal"
        android:layout_margin="20dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>